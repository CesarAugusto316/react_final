{
  // Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "css reset": {
    "prefix": "css-reset",
    "body": [
      "@import url(\"https://fonts.googleapis.com/css2?family=${1:--font-family}:wght@400;500;600;700&display=swap\");",
      "/*",
      "* -> 20 Most Used & Free sans-serif fonts (only change --font-family) <-",
      "*",
      "* Nunito",
      "* Poppins",
      "* Roboto",
      "* Monstserrat",
      "* Lato",
      "* PT Sans",
      "* Open Sans",
      "* Source Sans Pro",
      "* Exo",
      "* Exo 2",
      "* Rubik  //cheerfull",
      "* Ubuntu",
      "* Libre Franklin  //serious",
      "* Raleway  //elegant",
      "* Istok Web",
      "* Nobile",
      "* Dosis",
      "* Work Sans",
      "* Oswald // serious",
      "* Cambay",
      "*/",
      "",
      ":root {",
      "  font-size: 62.5%;",
      "  box-sizing: border-box;",
      "  --font-family: \"${1:--font-family}\", sans-serif;",
      "  --primary: rgb(55, 124, 251);",
      "  --primary-focus: rgb(5, 87, 240);",
      "  --primary-content: rgb(28, 40, 63);",
      "  --secondary: rgb(102, 204, 138);",
      "  --secondary-focus: rgb(61, 184, 104);",
      "  --secondary-content: rgb(40, 71, 56);",
      "  --accent: rgb(234, 82, 52);",
      "  --neutral: rgb(42, 42, 42);",
      "  --neutral-content: rgb(148, 152, 203);",
      "  --primary-shadow: rgba(3, 69, 190, 0.6);",
      "}",
      "",
      "[data-theme=\"dark\"] {",
      "  --base-100: rgb(23, 27, 35);",
      "  --base-150: rgb(42, 48, 60);",
      "  --base-200: rgb(36, 41, 51);",
      "  --base-300: rgb(31, 36, 45);",
      "  --base-400: rgb(15, 15, 27);",
      "  --base-content: rgb(166, 173, 186);",
      "  --base-shadow: rgba(35, 35, 35, 0.4);",
      "}",
      "",
      "[data-theme=\"light\"] {",
      "  --base-100: rgb(253, 253, 253);",
      "  --base-150: rgb(247, 247, 247);",
      "  --base-200: rgb(230, 230, 230);",
      "  --base-300: rgb(207, 207, 207);",
      "  --base-400: rgb(184, 185, 190);",
      "  --base-content: rgb(59, 62, 95);",
      "  --base-shadow: rgba(46, 55, 74, 0.1);",
      "}",
      "",
      "*,",
      "*::after,",
      "*::before {",
      "  box-sizing: inherit;",
      "  font-family: var(--font-family);",
      "  margin: 0;",
      "  padding: 0;",
      "  border: none;",
      "  scroll-behavior: smooth;",
      "  user-select: none;",
      "}",
      "",
      "#app {",
      "  font-family: var(--font-family);",
      "  color: var(--base-content);",
      "  font-size: 1.6rem;",
      "  background-color: var(--base-150);",
      "  min-height: 100vh;",
      "  width: 100%;",
      "  overflow-x: hidden;",
      "  display: flex;",
      "  flex-direction: column;",
      "}",
      "",
      "::-webkit-scrollbar {",
      "  appearance: none;",
      "  width: 14px;",
      "  background-color: var(--base-200);",
      "}",
      "::-webkit-scrollbar-thumb {",
      "  background-color: var(--base-400);",
      "  display: block;",
      "  min-height: 40px;",
      "  border-radius: 10rem;",
      "}",
      "::-webkit-scrollbar-thumb:hover {",
      "  background-color: var(--primary-shadow);",
      "}",
      "",
      "ul {",
      "  list-style: none;",
      "}",
      "",
      "a {",
      "  text-decoration: none;",
      "}",
      "",
      "*:focus {",
      "  outline: 2px solid var(--primary);",
      "  box-shadow: 0px 0px 10px 0px var(--primary-shadow);",
      "}",
      "",
      ".section {",
      "  flex: 1 1 100%;",
      "  width: 100%;",
      "  height: 100%;",
      "  display: flex;",
      "  align-items: center;",
      "  justify-content: center;",
      "}",
      "",
      ".main {",
      "  max-width: 80rem;",
      "  padding: 0 6rem;",
      "}",
      "",
      "@media screen and (max-width: 900px) {",
      "  :root {",
      "    font-size: 59%;",
      "  }",
      "}",
      "",
      "@media screen and (max-width: 600px) {",
      "  :root {",
      "    font-size: 56%;",
      "  }",
      "}",
      ""
    ],
    "description": "Base reset & global CSS"
  }
}
